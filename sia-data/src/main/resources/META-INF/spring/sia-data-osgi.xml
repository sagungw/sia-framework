<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"                               
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:osgi="http://www.eclipse.org/gemini/blueprint/schema/blueprint"                
   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd                     
       	http://www.eclipse.org/gemini/blueprint/schema/blueprint http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd">

    <osgi:reference id="hibernateConfigurationRef" interface="com.sia.main.plugin.persistence.HibernateConfiguration" availability="optional" timeout="5000" >
    	<osgi:reference-listener>
    		<bean class="com.sia.main.data.sessionfactory.HibernateConfigReferenceListener"></bean>
    	</osgi:reference-listener>
    </osgi:reference>
    
    <osgi:service id="menuPeranRepoServ" interface="com.sia.main.data.repositories.MenuPeranRepository" ref="menuPeranRepoBean"/>
    
    <osgi:service id="menuRepoServ" interface="com.sia.main.data.repositories.MenuRepository" ref="menuRepoBean"/>
    
    <osgi:service id="modulRepoServ" interface="com.sia.main.data.repositories.ModulRepository" ref="modulRepoBean"/>
    
    <osgi:service id="penggunaRepoServ" interface="com.sia.main.data.repositories.PenggunaRepository" ref="penggunaRepoBean"/>
    
    <osgi:service id="peranPenggunaRepoServ" interface="com.sia.main.data.repositories.PeranPenggunaRepository" ref="peranPenggunaRepoBean"/>
    
    <osgi:service id="peranRepoServ" interface="com.sia.main.data.repositories.PeranRepository" ref="peranRepoBean"/>
    
    <osgi:service id="satuanManajemenRepoServ" interface="com.sia.main.data.repositories.SatuanManajemenRepository" ref="satuanManajemenRepoBean"/>
    
</beans>