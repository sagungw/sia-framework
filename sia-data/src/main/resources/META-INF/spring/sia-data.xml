<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"                               
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:osgi="http://www.eclipse.org/gemini/blueprint/schema/blueprint"  
   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd                     
       	http://www.eclipse.org/gemini/blueprint/schema/blueprint http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd">

	<bean id="sessionFactoryManagerBean" class="com.sia.main.data.sessionfactory.SessionFactoryManager" scope="singleton">
		<property name="securitySessionFactoryConfiguration" ref="hibernateConfigurationRef"></property>
	</bean>
    
    <bean id="menuPeranRepoBean" class="com.sia.main.data.repositories.impl.MenuPeranRepositoryImpl"/>
    
    <bean id="menuRepoBean" class="com.sia.main.data.repositories.impl.MenuRepositoryImpl" />
    
    <bean id="modulRepoBean" class="com.sia.main.data.repositories.impl.ModulRepositoryImpl" >
    	<property name="sessionFactoryManager" ref="sessionFactoryManagerBean"></property>
    </bean>
    
    <bean id="penggunaRepoBean" class="com.sia.main.data.repositories.impl.PenggunaRepositoryImpl" >
    	<property name="sessionFactoryManager" ref="sessionFactoryManagerBean"></property>
    </bean>
    
<!--     <bean id="peranPenggunaRepoBean" class="com.sia.main.data.repositories.impl.PeranPenggunaRepositoryImpl" /> -->
    
    <bean id="peranRepoBean" class="com.sia.main.data.repositories.impl.PeranRepositoryImpl" >
    	<property name="sessionFactoryManager" ref="sessionFactoryManagerBean"></property>
    </bean>
    
    <bean id="satuanManajemenRepoBean" class="com.sia.main.data.repositories.impl.SatuanManajemenRepositoryImpl" />
    
</beans>